<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FL_Datatracker" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">#890001</item>
        <item name="colorPrimary">#890001</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#c0392b</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="backgroundColor">#000000</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerThemeDayNight</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerThemeDayNight</item>
    </style>

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#890001</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/datatracker_white</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/datatracker_branding_image
        </item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.FL_Datatracker</item>
    </style>
</resources>