<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FL_Datatracker" parent="Theme.Material3.Dark">
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#1C1C1E</item>
        <item name="colorPrimary">#c0392b</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#890001</item>
        <item name="backgroundColor">#1E1F22</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorSurface">#1C1C1E</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerTheme</item>
    </style>

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/branding_images_logo_red</item>
        <item name="android:navigationBarColor">#1C1C1E</item>
        <item name="windowSplashScreenBackground">#1E1F22</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/branding_images_brand</item>
        <item name="android:windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.FL_Datatracker</item>
    </style>
</resources>